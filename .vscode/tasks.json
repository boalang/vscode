// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
	"echoCommand": true,
    "type": "shell",
    "command": "npm",
	"tasks": [
		{
			"args": [
                "run",
                "webpack-dev"
			],
			"label": "webpack dev",
            "isBackground": true,
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
		},
		{
			"args": [
                "run",
                "package"
			],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
			"label": "package",
            "group": "build"
		},
		{
			"args": [
                "run",
                "antlr4ts"
			],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
			"label": "antlr4ts",
            "group": "build"
		}
	]
}
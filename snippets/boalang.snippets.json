{
    "visitor snippet": {
        "scope": "source.boalang",
        "prefix": "visitor",
        "body": "visit(${1:input}, visitor {\n    ${2:before} ${3:n}: ${4:type} -> {\n        ${5}\n    }\n});"
    },
    "before clause": {
        "scope": "source.boalang",
        "prefix": "before",
        "body": "before ${1:n}: ${2:type} -> {\n    ${3}\n}"
    },
    "after clause": {
        "scope": "source.boalang",
        "prefix": "after",
        "body": "after ${1:n}: ${2:type} -> {\n    ${3}\n}"
    },
    "snapshot snippet": {
        "scope": "source.boalang",
        "prefix": "snapshot",
        "body": "before node: CodeRepository -> {\n    snapshot := getsnapshot(node);\n    foreach (i: int; def(snapshot[i]))\n        visit(snapshot[i]);\n    stop;\n}"
    },
    "traversal snippet": {
        "scope": "source.boalang",
        "prefix": "traversal",
        "body": "${1:name} := traversal(${2:node}: ${3:CFGNode}) {\n    ${4}\n};"
    },
    "traversal-return snippet": {
        "scope": "source.boalang",
        "prefix": "traversal-return",
        "body": "${1:name} := traversal(${2:node}: ${3:CFGNode}) : ${4} {\n    ${5}\n    return ${6};\n};"
    },
    "traverse snippet": {
        "scope": "source.boalang",
        "prefix": "traverse",
        "body": "traverse(${1:cfg}, TraversalDirection.${2:BACKWARD}, TraversalKind.${3:HYBRID}, ${4});"
    },
    "traverse-fp snippet": {
        "scope": "source.boalang",
        "prefix": "traverse-fp",
        "body": "traverse(${1:cfg}, TraversalDirection.${2:BACKWARD}, TraversalKind.${3:HYBRID}, ${4}, ${5:fp});"
    },
    "fixp snippet": {
        "scope": "source.boalang",
        "prefix": "fixp",
        "body": "${1:name} := fixp(${2:curr}, ${3:prev}: ${4}) : bool {\n    return ${5};\n};"
    },
    "foreach snippet": {
        "scope": "source.boalang",
        "prefix": "foreach",
        "body": "foreach (${1:i}: ${2:int}; ${3:condition}) {\n    ${4}\n}"
    },
    "exists snippet": {
        "scope": "source.boalang",
        "prefix": "exists",
        "body": "exists (${1:i}: ${2:int}; ${3:condition}) {\n    ${4}\n}"
    },
    "ifall snippet": {
        "scope": "source.boalang",
        "prefix": "ifall",
        "body": "ifall (${1:i}: ${2:int}; ${3:condition}) {\n    ${4}\n}"
    },
    "if snippet": {
        "scope": "source.boalang",
        "prefix": "if",
        "body": "if (${1:condition}) {\n    ${2}\n}"
    },

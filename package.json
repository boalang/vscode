{
    "publisher": "Boa",
    "name": "boalang",
    "displayName": "Boa Language and Infrastructure",
    "description": "This extension provides syntax highlighting for Boa source queries and initial support for submitting them to Boa.",
    "icon": "images/boa-white.png",
    "license": "Apache-2.0",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.66.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "Boa",
        "mining software repositories"
    ],
    "preview": true,
    "homepage": "https://boa.cs.iastate.edu/",
    "bugs": {
      "url": "https://github.com/boalang/vscode/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/boalang/vscode.git"
    },
    "main": "./out/extension.js",
    "activationEvents": [
        "onLanguage:boalang",
        "onView:boalang.jobList",
        "onCommand:boalang.runQuery",
        "onCommand:boalang.showJob",
        "onCommand:boalang.prevPage",
        "onCommand:boalang.nextPage",
        "onCommand:boalang.refreshJobs"
    ],
    "contributes": {
        "commands": [
            {
                "command": "boalang.runQuery",
                "title": "Run Boa Query",
                "category": "Boa"
            },
            {
                "command": "boalang.showOutput",
                "title": "Show Boa Query Output",
                "category": "Boa"
            },
            {
                "command": "boalang.showJob",
                "title": "Display Boa Job",
                "category": "Boa"
            },
            {
                "command": "boalang.prevPage",
                "title": "Newer",
                "icon": "$(arrow-left)",
                "enablement": "boalang.prevPageEnabled",
                "category": "Boa"
            },
            {
                "command": "boalang.nextPage",
                "title": "Older",
                "icon": "$(arrow-right)",
                "enablement": "boalang.nextPageEnabled",
                "category": "Boa"
            },
            {
                "command": "boalang.refreshJobs",
                "title": "Refresh Jobs",
                "icon": "$(refresh)",
                "category": "Boa"
            }
        ],
        "colors": [
            {
                "id": "boalang.icon.jobCanceled",
                "description": "Icon color in the Boa job list for canceled jobs.",
                "defaults": {
                    "dark": "testing.iconSkipped",
                    "light": "testing.iconSkipped"
                }
            },
            {
                "id": "boalang.icon.jobCompileError",
                "description": "Icon color in the Boa job list for jobs with compile errors.",
                "defaults": {
                    "dark": "testing.iconErrored",
                    "light": "testing.iconErrored"
                }
            },
            {
                "id": "boalang.icon.jobExecError",
                "description": "Icon color in the Boa job list for jobs with execution errors.",
                "defaults": {
                    "dark": "testing.iconFailed",
                    "light": "testing.iconFailed"
                }
            },
            {
                "id": "boalang.icon.jobRunning",
                "description": "Icon color in the Boa job list for running jobs.",
                "defaults": {
                    "dark": "testing.iconQueued",
                    "light": "testing.iconQueued"
                }
            },
            {
                "id": "boalang.icon.jobDone",
                "description": "Icon color in the Boa job list for finished jobs.",
                "defaults": {
                    "dark": "testing.iconPassed",
                    "light": "testing.iconPassed"
                }
            }
        ],
        "views": {
            "explorer": [{
                "id": "boalang.jobList",
                "name": "Boa: Recent Jobs"
            }]
        },
        "viewsWelcome": [
            {
                "view": "boalang.jobList",
                "contents": "Click [refresh](command:boalang.refreshJobs) to list recent Boa jobs."
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "boalang.prevPage",
                    "when": "view == boalang.jobList",
                    "group": "navigation"
                },
                {
                    "command": "boalang.nextPage",
                    "when": "view == boalang.jobList",
                    "group": "navigation"
                },
                {
                  "command": "boalang.refreshJobs",
                  "when": "view == boalang.jobList",
                  "group": "navigation"
                }
            ],
            "explorer/context": [{
                "when": "resourceLangId == boalang",
                "command": "boalang.runQuery"
            }]
        },
        "configuration": {
            "title": "Boa API Settings",
            "order": 0,
            "properties": {
                "boalang.login.username": {
                    "type": "string",
                    "description": "Boa API username",
                    "order": 0,
                    "default": null
                },
                "boalang.dataset.favorite": {
                    "type": "string",
                    "description": "Favorite Boa dataset",
                    "order": 1,
                    "default": "2019 October/GitHub (small)"
                },
                "boalang.dataset.last": {
                    "type": "string",
                    "description": "Last used Boa dataset",
                    "order": 2,
                    "default": null
                },
                "boalang.joblist.pagesize": {
                    "type": "number",
                    "description": "Number of jobs to show in the jobs tree view",
                    "order": 3,
                    "default": 10
                }
            }
        },
        "languages": [{
            "id": "boalang",
            "aliases": ["Boa", "boalang"],
            "extensions": [".boa"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "boalang",
            "scopeName": "source.boalang",
            "path": "./syntaxes/boalang.tmLanguage.json"
        }],
        "snippets": [{
            "language": "boalang",
            "path": "./snippets/boalang.snippets.json"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "vscode:uninstall": "node ./out/uninstall.js",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "sax": "^1.2.4",
        "xmlbuilder2": "^3.0.2",
        "@boa/boa-api": "file:../api-js/"
    },
    "devDependencies": {
        "@types/node": "^8.10.25",
        "@types/vscode": "^1.51.0",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5"
    }
}